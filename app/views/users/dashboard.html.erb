<div class="dashboard-container">

  <div class="dashboard-grid-image">
    <% if @user.avatar.present? %>
    <%= (cl_image_tag @user.avatar, width: 200, height: 200, crop: :thumb, radius: :max) %>
    <% else %>
    <%= image_tag "dumb_avatar.png", class: "avatar"%>
    <% end %>

  </div>

  <div class="dashboard-grid-info">
    <h3 class="dashboard-info-title"><%= link_to @user.name, user_path(@user) %></h3><%= link_to "", user_edit_path(@user), class: "far fa-edit dashboard-info-edit dashboard-icon" %>
    <p class="dashboard-info-text">phone number: <%= @user.phone_number %></p>
    <p class="dashboard-info-text">email: <%= @user.email %></p>
  </div>

  <div class="dashboard-grid-spaces">
    <div class="dashboard-list-header">
      <h3>Spaces</h3>
      <div class="dashboard-list-item-spacer"></div>
      <%= link_to "", spaces_new_path, class: "fas fa-plus dashboard-list-text add-space-margin dashboard-icon add" %>
    </div>
    <div class="dashboard-list">
      <% @user.spaces.each do |space| %>
        <div class="dashboard-list-item">
          <%= link_to space.name, space_path(space), class: "dashboard-list-text dashboard-link" %>
          <div class="dashboard-list-item-spacer"></div>
          <%= link_to "", space_edit_path(space), class: "far fa-edit dashboard-icon add-space-margin" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="dashboard-grid-bookings">
    <div class="dashboard-list-header">
      <h3>Bookings</h3>
    </div>
    <div class="dashboard-list">
      <% @user.bookings.each do |booking| %>
        <div class="dashboard-list-item">
          <%= link_to booking.space.name, spaces_path(booking.space), class: "dashboard-list-text dashboard-link" %>
          <div class="dashboard-list-item-spacer"></div>
          <%= link_to booking.space.user.name, user_path(booking.space.user), class: "dashboard-list-text" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

