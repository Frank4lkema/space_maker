<div class="container">
  <div class="row" id="top_row">
    <div class="avatar">
      <%= image_tag("profile_avatar.jpg") %>
    </div>
    <div class="username">
      <div>
        <h2><%= @user.name.capitalize %></h2>
      </div>
      <div>
        <p>Rating: 4/5 </p>
      </div>
    </div>
  </div>
    <div class="row_about">
      <div>
        <h3>About</h3>
      </div>
      <div>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Porro, beatae? Iure distinctio ullam ipsum ad laudantium totam, et reprehenderit aperiam unde veniam architecto, dolore incidunt consequatur cupiditate sint obcaecati error.</p>
      </div>
    </div>
  <div class="card_container">
    <h3>My Spaces</h3>
    <div class="row_card">
      <% @user.spaces.each do |space| %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url( <%= image_path 'elad_shack.jpg' %>);">
        <%= link_to space_path(space) do %>
        <div class="col-xs-12 col-sm-4">
          <h3><%= space.name %></h3>
          <p> <%= space.address %> </p>
        </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
</div>

